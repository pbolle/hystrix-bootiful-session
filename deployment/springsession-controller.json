{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"springsession",
      "labels":{
         "app":"springsession"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "app":"springsession"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"springsession"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"springsession",
                  "image":"pbolle/session:latest",
		  "imagePullPolicy" : "IfNotPresent",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":8080
                     },{
			"containerPort":4000,
			"name":"remotedebug"
        	     }
                  ]
               }
            ]
         }
      }
   }
}
